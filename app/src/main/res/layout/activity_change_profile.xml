<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textName"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textSurname"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textName"
        android:layout_marginTop="80dp"
        android:text="Surname"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textSurname"
        android:layout_alignStart="@+id/textSurname"
        android:layout_below="@+id/textSurname"
        android:layout_marginTop="15dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textUsername"
        android:layout_alignStart="@+id/textUsername"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textTelephone"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"
        android:layout_below="@+id/textPassword"
        android:layout_marginTop="15dp"
        android:text="Telephone"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textTelephone"
        android:layout_alignStart="@+id/textTelephone"
        android:layout_below="@+id/textTelephone"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textRoom"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:layout_marginTop="15dp"
        android:text="Room"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textName"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textSurname"
        android:layout_toEndOf="@+id/textSurname"
        android:layout_toRightOf="@+id/textSurname"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textUsername"
        android:layout_toEndOf="@+id/textUsername"
        android:layout_toRightOf="@+id/textUsername"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textPassword"
        android:layout_toEndOf="@+id/textPassword"
        android:layout_toRightOf="@+id/textPassword"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <EditText
        android:id="@+id/editTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textTelephone"
        android:layout_toEndOf="@+id/textTelephone"
        android:layout_toRightOf="@+id/textTelephone"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textEmail"
        android:layout_toEndOf="@+id/textEmail"
        android:layout_toRightOf="@+id/textEmail"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <EditText
        android:id="@+id/editRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textRoom"
        android:layout_toEndOf="@+id/textRoom"
        android:layout_toRightOf="@+id/textRoom"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/wallet_bright_foreground_disabled_holo_light" />

    <Button
        android:id="@+id/buttonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Change Profile Image"
        android:layout_below="@+id/textRoom"
        android:layout_centerHorizontal="true" />

</RelativeLayout>